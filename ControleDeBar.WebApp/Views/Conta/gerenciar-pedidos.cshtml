@model GerenciarPedidosViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Gerenciar Pedidos da Conta";
}

<div class="row">
    <div class="mt-2">
        <label class="control-label"><strong>Titular:</strong> @Model.Conta.Titular</label>
    </div>

    <div class="mt-2">
        <label class="control-label"><strong>Mesa:</strong> @Model.Conta.Mesa</label>
    </div>

    <div class="mt-2">
        <label class="control-label"><strong>Garçom:</strong> @Model.Conta.Garcom</label>
    </div>
</div>

<div class="row mt-3">
    <div class="col-lg-6 d-grid gap-3">
        <form class="d-flex gap-2 align-items-center" action="/conta/@Model.Conta.Id/adicionar-pedido" method="post">
            <div class="col-6">
                <label class="control-label">Produto: </label>

                <select class="form-select" name="IdProduto">
                    @foreach (var produto in Model.Produtos)
                    {
                        <option value="@produto.Value">@produto.Text</option>
                    }
                </select>
            </div>

            <div class="col-3">
                <label class="control-label">Quantidade: </label>
                <input type="number" min="1" value="1" name="quantidadeSolicitada" class="form-control" />
            </div>

            <button class="btn btn-primary align-self-end col">
                Adicionar
            </button>
        </form>
        
        <span class="mt-2"></span>
        
        @if (!Model.Conta.Pedidos.Any())
        {
            <p class="fw-semibold">Ainda não há nenhum pedido relacionado à conta...</p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Total parcial</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var pedido in Model.Conta.Pedidos)
                {
                    <tr>
                        <td>@pedido.Id</td>
                        <td>@pedido.Produto</td>
                        <td>@pedido.QuantidadeSolicitada</td>
                        <td>@pedido.TotalParcial.ToString("C2")</td>
                        <td>
                            <div class="d-flex gap-2">
                                <form action="/conta/@Model.Conta.Id/remover-pedido/@pedido.Id" method="post">
                                    <button class="btn btn-danger">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }

        <a href="/conta/listar" class="btn btn-secondary px-5 mt-2">
            <i class="bi bi-arrow-return-left me-1"></i>
            Voltar
        </a>
    </div>
</div>