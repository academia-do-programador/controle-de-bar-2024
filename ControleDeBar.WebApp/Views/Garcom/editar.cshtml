@model EditarGarcomViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Editar Garçom";
}

<div class="row mt-3">
    <div class="col-lg-6">
        <form class="d-grid gap-4" asp-action="Editar">

            <div class="mt-2">
                <label class="control-label fw-semibold">Nome do Garçom:</label>
                <input class="form-control" asp-for="Nome"/>
                <span class="text-danger my-1" asp-validation-for="Nome"></span>
            </div>

            <div class="mt-2">
                <label class="control-label fw-semibold">CPF do Garçom:</label>
                <input class="form-control" asp-for="CPF" id="cpf"/>
                <span class="text-danger my-1" asp-validation-for="CPF"></span>
            </div>

            <div class="mt-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary px-5">
                    <i class="bi bi-floppy-fill me-1"></i>
                    Gravar
                </button>

                <a class="btn btn-secondary px-5" href="/garcom/listar">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#cpf").mask("000.000.000-00", { reverse: true })
        });
    </script>
}