@model IEnumerable<ControleDeBar.WebApp.Models.ListarGarcomViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Listagem de Garçons";
}

<div class="mt-3">
    <a class="btn btn-primary px-5" href="/garcom/inserir">
        <i class="bi bi-plus-circle me-1 align-items-center"></i>
        Inserir Novo Garçom
    </a>
</div>

<div class="row mt-3 gap-3 p-2">
    @foreach (var garcom in Model)
    {
        <div class="card col-md-5 col-lg-4 col-xl-3">
            <div class="card-body">
                <div class="row row-cols-2">
                    <label class="card-title fs-5 fw-semibold">@garcom.Nome</label>

                    <div class="text-end">
                        <a class="btn btn-secondary btn-sm" href="/garcom/detalhes/@garcom.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        <a class="btn btn-primary btn-sm" href="/garcom/editar/@garcom.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a class="btn btn-danger btn-sm" href="/garcom/excluir/@garcom.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>

                <p class="card-subtitle fs-6 text-body-secondary"><strong>Id:</strong> [@garcom.Id]</p>
                <p class="card-subtitle fs-6 text-body-secondary"><strong>CPF:</strong> @garcom.CPF</p>
            </div>

        </div>
    }
</div>
